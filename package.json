{
  "name": "pah",
  "displayName": "phaserAPIHelper",
  "description": "Get API information for a given version of phaser and return the details",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pah.apinfo",
    "onCommand:pah.refresh",
    "onView:phaserapi-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "phaserapi-sidebar-view",
          "title": "Phaser API",
          "icon": "media/rocket.svg"
        }
      ]
    },
    "views": {
      "phaserapi-sidebar-view": [
        {
          "type": "webview",
          "id": "phaserapi-sidebar",
          "name": "Phaser API",
          "icon": "media/rocket.svg",
          "contextualTitle": "Phaser API"
        }
      ]
    },
    "commands": [
      {
        "command": "pah.apinfo",
        "category": "Phase API",
        "title": "Get API Information"
      },
      {
        "command": "pah.refresh",
        "category": "Phase API",
        "title": "Refresh Webview"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "pah.apinfo",
          "when": "editorHasSelection",
		  "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --config ./build/node-extension.webpack.config.js",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch --config ./build/node-extension.webpack.config.js\"",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/svelte": "^2.0.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "concurrently": "^6.4.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "jquery": "^3.6.0",
    "mocha": "^8.4.0",
    "node-fetch": "^3.1.0",
    "rollup": "^2.60.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.44.2",
    "svelte-check": "^2.2.10",
    "svelte-preprocess": "^4.9.8",
    "ts-loader": "^9.2.6",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "bootstrap": "^5.1.3"
  }
}
